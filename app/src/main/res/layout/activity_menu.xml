<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/medicaLogo"
        android:layout_width="328dp"
        android:layout_height="102dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:src="@drawable/medica_logo" />

    <ImageButton
        android:id="@+id/menu_pill"
        android:layout_width="102dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/menu_board"
        android:layout_marginStart="18dp"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/pill_redpng" />

    <ImageButton
        android:id="@+id/menu_board"
        android:layout_width="102dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/board2" />

    <ImageButton
        android:id="@+id/menu_box"
        android:layout_width="102dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/menu_pill"
        android:layout_marginEnd="18dp"
        android:padding="20dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/box2" />

    <Button
        android:id="@+id/btnLogoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:text="Logoff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGravar"
        app:layout_constraintVertical_bias="0.304" />


</RelativeLayout>