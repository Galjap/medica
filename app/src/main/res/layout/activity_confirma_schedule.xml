<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmaScheduleActivity">

    <ExpandableListView
        android:id="@+id/qtdDiariaListView"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"></ExpandableListView>

    <EditText
        android:id="@+id/filterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scheduleMedicationSearch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Medicamento"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="146dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/scheduleMedicationSearch"
        android:layout_width="362dp"
        android:layout_height="200dp"
        android:layout_above="@+id/btnConfirmSchedule"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="192dp" />

    <Button
        android:id="@+id/btnConfirmSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Confirmar"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="458dp" />


</RelativeLayout>